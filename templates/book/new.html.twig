{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ book.id ? 'Edit' : 'New' }} Book</h1>

    {{ form_start(form) }}

      {{ form_row(form.title) }}
      {{ form_row(form.author) }}
      {{ form_row(form.year) }}
      {{ form_row(form.isbn) }}

      <button class="btn btn-primary">
        {{ book.id ? 'Update' : 'Create' }}
      </button>

    {{ form_end(form) }}
{% endblock %}